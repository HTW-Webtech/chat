<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Chat â€“ Login</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Login</h1>
  <form class="login-form" action="/login" method="POST" accept-charset="utf-8">
    <label>
      Name:
      <input type="text" name="name">
    </label>
    <label>
      Password:
      <input type="password" name="password">
    </label>
    <div class="spread">
      <button disabled>login</button>
      <a href="/register" title="register a new account">register</a>
    </div>
  </form>
  <script>
    const button = document.querySelector('button');
    const name = document.querySelector('input[name="name"]');
    const password = document.querySelector('input[name="password"]');
    const setButtonState = () => button.disabled = !(name.value && password.value);

    name.addEventListener('input', setButtonState);
    password.addEventListener('input', setButtonState);
  </script>
</body>
</html>
